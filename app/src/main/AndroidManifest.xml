<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.Sornaly.gadgetstore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.Sornaly.gadgetstore.NotificationActivity" />
        <activity android:name="com.Sornaly.gadgetstore.SearchActivity" />
        <activity android:name="com.Sornaly.gadgetstore.UpdateUserInfoActivity" />
        <activity android:name="com.Sornaly.gadgetstore.OTPverificationActivity" />
        <activity android:name="com.Sornaly.gadgetstore.ViewAllActivity" />
        <activity android:name="com.Sornaly.gadgetstore.MyAddressesActivity" />
        <activity
            android:name="com.Sornaly.gadgetstore.AddAddressActivity"
            android:theme="@style/RedProgressBar" />
        <activity android:name="com.Sornaly.gadgetstore.DeliveryActivity" />
        <activity android:name="com.Sornaly.gadgetstore.OrderDetailsActivity" />
        <activity android:name="com.Sornaly.gadgetstore.ProductDetailsActivity" />
        <activity android:name="com.Sornaly.gadgetstore.CategoryActivity" />
        <activity
            android:name="com.Sornaly.gadgetstore.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.Sornaly.gadgetstore.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.Sornaly.gadgetstore.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/bkashTheme"
            tools:replace="android:theme" />
    </application>

</manifest>